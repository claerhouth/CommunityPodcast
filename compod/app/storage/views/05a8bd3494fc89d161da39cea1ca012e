			<?php echo Form::password('password', array('class' => 'form-control', 'placeholder' => 'Password')); ?><br>
			
		    
		
		    <div class="btn-group">
		       <?php echo Form::submit('Login', array('class' => 'btn btn-default')); ?>
		   </div>
	</div>
    </div>

    
<?php echo Form::close(); ?>

