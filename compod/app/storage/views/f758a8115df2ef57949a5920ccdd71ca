                <?php endif; ?>
            </ul>
        </div><!-- end nav -->

        <!-- check for flash notification message -->
        <?php if(Session::has('flash_notice')): ?>
            <div id="flash_notice"><?php echo Session::get('flash_notice'); ?></div>
        <?php endif; ?>

        <?php echo $__env->yieldContent('content'); ?>
    </div><!-- end container -->
